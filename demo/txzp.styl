bg(src){
    background: url(src) no-repeat center
}
*{
    margin: 0;
    padding: 0;
    list-style: none
}
html,body{
    width 100%
    height 100%
}
.bg{
    position: absolute;
    z-index: 0;
    bg('https://cdn.tencentgroup.qq.com/join_static/static/v2/images/bg.png')
    background-size: cover;
    width: 100%;
    height: 100%;
    -webkit-transform: translateZ(-10px);
}
header{
    position fixed
    left 100px
    top: 50px 
    display: flex
    height: 31px
    justify-content: space-between
    max-width: 1600px
    z-index: 99
    align-items flex-end
    .logo{
        width 230px
        height 100%
        bg('https://cdn.tencentgroup.qq.com/join_static/static/v2/images/logo.png')
    }
    .list{
        margin-left: 40px
        li{
            float left
            margin 0 26px
            a{
                color #fff
                text-decoration none  
                opacity .8              
            }
        }
        li.active{
            a{
                font-weight: 800
                padding-bottom: 5px;
                border-bottom: 2px solid #fff
            }
        }
    }
}
